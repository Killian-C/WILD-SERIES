{% extends 'base.html.twig' %}

{% block title %}All Categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories</h1>
    {% for category in categories %}
        <h2>{{ loop.index }} / {{ category.name }}</h2>
        <a href="{{ path('category_show', {categoryName : category.name}) }}">Voir la sélection</a>
    {% endfor %}
{% endblock %}