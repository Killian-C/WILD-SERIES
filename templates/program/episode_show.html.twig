{% extends 'base.html.twig' %}

{% block title %} Episode n°{{ episode.number }} {% endblock %}

{% block body %}
    <h2 class="text-center">{{ program.title }}</h2>
    <h3 class="text-center">Saison {{ season.number }}</h3>
    <div class="card w-75 mx-auto p-2">
        <div class="card-title">Episode {{ episode.number }} - "{{ episode.title }}"</div>
        <div class="card-text">{{ episode.synopsis }}</div>
    </div>
    <div class="col-12 text-center my-3">
        {% if app.user %}

                <div class="container form-container mt-2 mb-4">
                    <div class="row mx-auto">
                        <div class="col-12 d-flex flex-column align-items-center justify-content-center my-2">
                            {{ form_start(form) }}
                            <div class="me-4">{{ form_label(form.comment) }}</div>
                            {{ form_widget(form.comment) }}
                            {{ form_errors(form.comment) }}
                        </div>
                    </div>
                    <div class="row mx-auto">
                        <div class="col-12 d-flex flex-column align-items-center justify-content-center my-2">
                            <div class="me-4">{{ form_label(form.rate) }}</div>
                            {{ form_widget(form.rate) }}
                            {{ form_errors(form.rate) }}
                        </div>
                    </div>
                    <input class="p-2 mx-auto mt-4" type="submit" value="Laisser un commentaire">
                    {{ form_end(form) }}
                </div>

            {% for comment in episode.comments|reverse %}
                <p class="mt-2"><span class="fst-italic p-2">{{ comment.author.email }} a commenté : </span><span  class="fw-bold p-2">{{ comment.comment }}</span> - Note : {{ comment.rate }} /5</p>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}