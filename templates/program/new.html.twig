{% extends 'base.html.twig' %}

{% block title %}Nouvelle série{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <div class="container form-container">
            <div class="row mx-auto">
                <div class="col-12 d-flex flex-column align-items-center justify-content-center my-2">
                    <div class="me-4">{{ form_label(form.title) }}</div>
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>
                <div class="col-12 d-flex flex-column align-items-center justify-content-center my-2">
                    <div class="me-4">{{ form_label(form.summary) }}</div>
                    {{ form_widget(form.summary) }}
                    {{ form_errors(form.summary) }}
                </div>
                <div class="col-12 d-flex flex-column align-items-center justify-content-center my-2">
                    <div class="me-4">{{ form_label(form.posterFile) }}</div>
                    <div class="text-light">{{ form_widget(form.posterFile) }}</div>
                </div>
                <div class="col-12 d-flex flex-column align-items-center justify-content-center my-2">
                    <div class="me-4">{{ form_label(form.category) }}</div>
                    {{ form_widget(form.category) }}
                </div>
                <div class="col-12 d-flex flex-column align-items-center justify-content-center my-2">
                    <div class="me-4">{{ form_label(form.actors) }}</div>
                    <div class="w-75 d-flex justify-content-center align-items-center">
                        {{ form_widget(form.actors) }}
                    </div>
                </div>
                <div class="col-12 text-center my-3">
                    <input class="p-2 mx-auto" type="submit" value="Ajouter la série">
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}